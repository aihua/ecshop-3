                        $is_line_first = true;  // 是否是横分页的第一个
                        $is_line_last = true;   // 是否是横分页的最后一个
                        
                        // 控制当前分页
                        for($j = 0; $j < count($arr_line_num); $j++)
                        {
                            if($i < $arr_line_num[$j] + $have_line_num) // curr_line_num
                            {
                                $roll_line_last = $roll_line;   // 记录上一个横分页
                                $roll_line = $j;
                                break;
                            }
                            else
                            {
                                $have_line_num += $arr_line_num[$j];
                            }
                        }
                        
                        $is_line_first = ($i == 0 || $roll_line != $roll_line_last) ? true : false;
