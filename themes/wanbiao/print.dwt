    <script language="javascript">
    $(document).ready(function() {
         $("dl a").each(function(i){
            var title = $(this).attr('title');
            if(typeof(title) != 'undefined')
            {
                var check = $("#sAll").attr('checked');
                if(title == '点击勾选' && check == 'checked')
                {
                    $(this).click();
                }
            }
        });
        
    });

    // 本排全选
    $(".quanxuan1").click(function(){
        var check = $(this).attr('checked');
        var name = $(this).attr('name');
        
        if(check == 'checked')
        {
            if(name == 'sLine')
            {
                // 联动sAll
                
                //alert("处理1行勾选");
                var show = $(this).parent().parent().next().find("dl a").each(function(i){
                    var title = $(this).attr('title');
                    if(typeof(title) != 'undefined')
                    {
                        if(title == '点击勾选')
                            $(this).click();
                    }
                });
            }
            else if(name == 'sAll')
            {
                //alert("处理全部行勾选");
                
                // 联动其他的sLine
                $(".quanxuan1").each(function(i){
                    var sub_check = $(this).attr('checked');
                    if(sub_check != 'checked')
                    {
                        $(this).click();
                    }
                });
                
                $("dl a").each(function(i){
                    var title = $(this).attr('title');
                    if(typeof(title) != 'undefined')
                    {
                        if(title == '点击勾选')
                            $(this).click();
                    }
                });
                
            }
        }
        else
        {
            if(name == 'sLine')
            {
                // 联动sAll
                
                var show = $(this).parent().parent().next().find("dl a").each(function(i){
                    var title = $(this).attr('title');
                    if(typeof(title) != 'undefined')
                    {
                        if(title == '点击不勾选')
                            $(this).click();
                    }
                });
                
            }
            else if(name == 'sAll')
            {
                // 联动其他的sLine
                $(".quanxuan1").each(function(i){
                    var sub_check = $(this).attr('checked');
                    if(sub_check == 'checked')
                    {
                        $(this).click();
                    }
                });
                
                //alert("处理全部行勾选");
                $("dl a").each(function(i){
                    var title = $(this).attr('title');
                    if(typeof(title) != 'undefined')
                    {
                        if(title == '点击不勾选')
                            $(this).click();
                    }
                });
            }
        }
    });
    
    // 鼠标经过要变红
    $(".pt_product_listA dl,.pt_product_list dl").hover(function() {
        $(this).find("a").each(function(i){
            var a_id = $(this).attr("id");
            if(typeof(a_id) != 'undefined')
            {
                $(this).css("border-color","#d31d17");
            }
        });
        
    }, function() {
        $(this).find("a").each(function(i){
            var a_id = $(this).attr("id");
            if(typeof(a_id) != 'undefined')
            {
                $(this).css("border-color","#f0832b");
            }
        });
    });

    
    // 单个勾选点击
    $("dl a").click(function(){
        var title = $(this).attr('title');
        if(typeof(title) != 'undefined')
        {
            var opt = (title == '点击勾选') ? 'add' : 'del'; 
            var pick_data = $(this).attr('data');
            var edit_var = '<?=$edit_var?>';
            var a_id = $(this).attr('id');
            
            var str_parameter = 'opt='+opt+'&data='+escape(pick_data)+'&edit_var='+edit_var;
            $.post('/print/set_no_product', str_parameter , function(data)
            {
                if(data.success)
                {
                    if(opt == 'add')
                    {
                        $("#"+a_id).addClass("gouxuan");
                        $("#"+a_id).removeClass("no_gouxuan");
                        
                        $("#"+a_id).parent().addClass("hui");
                        $("#"+a_id).attr('title','点击不勾选');
                    }
                    else
                    {
                        $("#"+a_id).addClass("no_gouxuan");
                        $("#"+a_id).removeClass("gouxuan");
                        
                        $("#"+a_id).parent().removeClass("hui");
                        $("#"+a_id).attr('title','点击勾选');
                    }
                    //
                    //alert("done you mother");
                    /*
                    set_content_page(roll_line, opt);
                    */
                }
                else
                {
                    alert(data.message);
                }
            }, 'json');
        }
        else
        {
            // 其他的a标签，可以不处理
        }
    });
    
    </script>
