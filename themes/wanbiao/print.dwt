//  挑选产品切换事件
$('.goto_btn').click(function(){
	var Mleft = /[0-9]{1,}/.exec($('#chanpin_box').css('left'))*1+900;
	var MarginLeft = $('#MarginLeft').attr('value')
	if(!$("#chanpin_box").is(":animated") && Mleft <= MarginLeft){
		$("#chanpin_box").animate({left:-Mleft+"px"},500,function(){
			if(Mleft == MarginLeft)
				$('.goto_btn').attr("src","../../images/print/toright5.png");
			$('.back_btn').attr("src","../../images/print/toleft5.png");				
		});
	};
});
$('.back_btn').click(function(){
	var Mleft = /[0-9]{1,}/.exec($('#chanpin_box').css('left'))*1-900;
	if(!$("#chanpin_box").is(":animated") && Mleft >= 0){
		$("#chanpin_box").animate({left:-Mleft+"px"},500,function(){
		   $('.goto_btn').attr("src","../../images/print/toright4.png");
		   if(Mleft == 0)
				$('.back_btn').attr("src","../../images/print/toleft4.png");					
		});
	};
});
$('.pageNum a').click(function(){
	var index=$(this).index();
	if($('.pageNum a').eq(index).attr('href') != 'javascript:void(0)')
		$('.pageNum a').removeClass('pg_cur').eq(index).addClass('pg_cur');
});
// 热销产品和全部产品
$('.chanpinrexiao a').click(function(){
	var cpxuliehao=$(this).index();
	$('.chanpinrexiao a').removeClass('cp_tab_cur' ).eq(cpxuliehao).addClass('cp_tab_cur');
	$('.cp_tab_count').hide().eq(cpxuliehao).show();
});
function choose(id)
{
	var panel = $('#panel').attr('value');
	var clas = $('#id_'+id).attr("class");
	$.post("print.php?act=choose_add", {goods_id:id,panel:panel},
		function (data){
			if(data.msg == '2')
			{
				var windowHeight = $('body').height();
				$('.mengceng').css('height',windowHeight+'px');
				$('.mengceng').show();
				var divName = $('.tx_pop'); 
				var top = ($(window).height() - $(divName).height())/2;   
				var left = ($(window).width() - $(divName).width())/2;   
				var scrollTop = $(document).scrollTop();   
				$(divName).css( { position : 'absolute', 'top' : top + scrollTop,} ).show();
			}else if(data.msg == '3' || data.msg == '1')
			{
 
				if(data.msg == '1')
				{
					$('#id_'+id).removeClass('gouxuan');
					$('#g_'+id).removeClass(' cplink_cur');
				}else if(data.msg == '3'){
					$('#id_'+id).addClass('gouxuan');
					$('#g_'+id).addClass('cplink_cur');
				}
				$('.wenzitxt p em').eq(0).html(data.html.num_limit);
				$('.wenzitxt p em').eq(1).html(data.html.num);
				$('.wenzitxt p em').eq(2).html(data.html.num_surplus);
				$('#chanpin_box').html(data.html.html);
				$('#MarginLeft').val(data.html.andMarginLeft);
				$("#chanpin_box").animate({left:-data.html.andMarginLeft+"px"},500,function(){
					$('.goto_btn').attr("src","../../images/print/toright5.png");
					if(data.html.num >= 6)
						$('.back_btn').attr("src","../../images/print/toleft5.png");
					if(data.html.num_limit == data.html.num)
					{
						$('.sider_top a').eq(1).removeClass('non-cyan').addClass('orange');
						$('.sider_top a').eq(1).attr('href','?act=preview&p={$panel}');
					}
				});

			}
	}, "json");
}
function search()
{
	var search = $('#search').attr('value');
	window.location.href = '?act=choose&panel={$panel}&search='+search;
}
